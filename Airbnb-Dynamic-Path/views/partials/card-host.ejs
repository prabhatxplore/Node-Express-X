<div class="flex flex-wrap gap-4 justify-center">
  <% registeredHomes.forEach(home=>{ %>
    <div class="cursor-pointer overflow-hidden h-[280px] w-[220px] font-medium rounded-2xl  flex flex-col gap-2">
      <div class="relative ">
        <p class="absolute text-[14px] top-[3px] left-[6px] text-gray-200">
          <%= home.location %>
        </p>
        <img class="object-center object-cover rounded-2xl h-[220px] w-[220px]" src=<%=home.imageLink %> alt="">
      </div>
      <div>
        <div class="flex justify-between px-1.5">
          <p>
            <%= home.houseName %>
          </p>
          <p class="text-[#FF385C] ">
            <%= home.price %> $
          </p>
        </div>

        <div class="flex justify-between px-1.5 font-normal text-gray-500">
          <div class="">
            <button
              class="px-2 rounded-[6px] bg-blue-500 hover:bg-[#FF385C]transition duration-150 text-white">Edit</button>
            <button
              class="px-2 rounded-[6px] bg-red-500 hover:bg-[#FF385C]transition duration-150 text-white">Delete</button>

          </div>
          <form action="/"></form>
          <button class="" type="submit"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="size-6 ">
              <path  class="fill-red-500" stroke-linecap="round" stroke-linejoin="round"
                d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg></button>

        </div>
      </div>

    </div>
    <% }) %>
</div>