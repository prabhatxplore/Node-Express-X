<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('../partials/pagetitle') %>
    <link rel="stylesheet" href="/output.css" />
</head>

<body class="">
  <%- include('../partials/nav') %>
    <main class="flex justify-center items-center mt-32">
      <form action="<%= editing ? '/host/edit-home' : '/host/add-home' %>"
        class="w-[40vw] gap-5 p-4 rounded-3xl h-fit outline  flex flex-col" method="POST">
        <input type="hidden" name="_id" value="<%= editing ? home._id : '' %>" id="">
        <h1 class="text-center text-4xl font-bold">
          <%= editing ? 'Edit Home' : 'Register Home' %>
        </h1>
        <div class="flex flex-col gap-2">
          <label class="text-center text-2xl">Enter Details</label>
          <input required minlength="7" class="outline-none w-full bg-white h-10 rounded-3xl px-5"
            value="<%= editing ? home.house_name : '' %>" type="text" name="house_name"
            placeholder="Enter name of the house" />
          <input required name="price" class="outline-none w-full bg-white h-10 rounded-3xl px-5"
            value="<%= editing ? home.price : '' %>" type="number" placeholder="Enter price" />
          <input required name="location" value="<%= editing ? home.location : '' %>"
            class="outline-none w-full bg-white h-10 rounded-3xl px-5" type="text" placeholder="Enter location" />
          <input required name="image_url" value="<%= editing ? home.image_url : '' %>"
            class="outline-none w-full bg-white h-10 rounded-3xl px-5" type="text" placeholder="Enter image link" />
        </div>
        <input type="submit" value="<%= editing ? 'Update' : 'Submit' %>"
          class="w-full cursor-pointer font-medium <%= editing ? ' bg-green-500 text-black hover:bg-green-600' : 'bg-[#FF385C] hover:bg-[#e73455] text-white' %>  rounded-3xl h-10 transition duration-300 active:scale-95 active:duration-100" />
      </form>
    </main>
</body>

</html>